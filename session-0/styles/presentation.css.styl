.reveal .stage
	width 4.5em
	height 14em
	padding 1em 0.3em
	margin 0 1em
	display inline-block
	border-radius 3px
	vertical-align top

	h5
		color #000

.working
	background-color #F23A0D

.repo
	background-color #0DAEF2

.index
	background-color #FFCE0A

.reveal .stash
	background-color #AAA
	width 3em
	
.list
	text-align left
	
h5.whatthecommit
	font-style italic
	display none
	
	&:before, &:after
		font-size 1.5em
		color gray
		

	&:before
		content '» '
		
	&:after
		content ' «'
