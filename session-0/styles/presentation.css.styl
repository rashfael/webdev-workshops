.reveal h1, .reveal h2, .reveal h3, .reveal h4, .reveal h5, .reveal h6
	text-transform initial

.progress span
	background #099
	background none repeat scroll 0% 0% #099

.reveal .controls div.navigate-left, .reveal .controls div.navigate-left.enabled
	border-right-color #099


img.no-border
	border:none !important
	background none !important
	box-shadow none !important
	
img.half-height
	max-height 50vh
	
img.long-branch
	max-width 200vw
	max-height 200vh
	position absolute
	left -50vw

.reveal pre
	width 110% !important

pre .comment
	float right
	width 26em

// .cheat-sheet-branching, .cheat-sheet-remote, .stash-section
// 	pre .comment
